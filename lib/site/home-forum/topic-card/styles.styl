.topic-card
  margin 15px
  width 260px
  background-color #fff
  border-radius 4px
  box-shadow 0 2px 2px rgba(0,0,0,0.2)
  overflow hidden
  color #111
  cursor pointer
  .topic-cover
    background-size cover
    width 100%
    height 150px
  h3
    font-weight 100
    margin 10px 10px 0
  p
    margin 5px 10px
    color #555
    font-size 10px
  &:hover
    opacity 0.5

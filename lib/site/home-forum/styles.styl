#forum-home
  flex 1
  overflow auto

  .cover-img
    min-height 200px
    background-size cover
    color #fff
    display flex
    flex-direction column
    justify-content flex-end

  .cover
    color #444
    width 100%
    display flex
    flex-direction column
    justify-content flex-end
    margin-bottom 30px
    padding 30px 0 40px
    background-color #f9f9f9

  .cover-content
    width 90%
    max-width 600px
    margin 0 auto
    padding 0 10px

    h1
      margin-bottom .2em

  .topics-container
    display flex
    flex-wrap wrap
    justify-content center

    @import './topic-card/styles'

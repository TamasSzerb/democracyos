#forum-home
  flex 1
  overflow auto
  padding-bottom 60px

  .cover-img
    min-height 200px
    background-size cover
    color #fff
    display flex
    flex-direction column
    justify-content flex-end

  .cover
    margin-bottom 30px
    padding 30px 0 40px
    width 100%
    color #444
    text-align center
    background-color #f9f9f9

  .cover-content
    margin 0 auto
    padding 0 10px

    h1
      margin-bottom .2em

  .topics-container
    display flex
    flex-wrap wrap
    justify-content center

  @import './topic-card/styles'

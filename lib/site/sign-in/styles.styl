#signin-container
  flex 1
  display flex
  justify-content center
  overflow auto
  #signin-form
    max-width 300px
    width 90%
    .form-group
      overflow hidden
      .signup
        float right
        color #666
        font-size 12px
        span
          margin-right 5px
          font-weight bold
    .forgot
      position relative
      a
        position absolute
        right 0
        font-size 12px
        top 3px
    .title-page i
      margin-right 3px

    .loader-btn
      position relative
      color #fff
      cursor auto
      .loader
        position absolute
        left 50%
        top 50%
        border-radius 100%
        width boxSize * 1px
        height boxSize * 1px
        box-shadow boxSize*1px boxSize*1px color2,
          boxSize*-1px boxSize*1px color,
          boxSize*-1px boxSize*-1px color2,
          boxSize*1px boxSize*-1px color
        animation spin ease infinite 4s
        transition-property opacity

      @-webkit-keyframes spin {
        0%,
        100% {
            box-shadow: boxSize*1px boxSize*1px color2,
            boxSize*-1px boxSize*1px color,
            boxSize*-1px boxSize*-1px color2,
            boxSize*1px boxSize*-1px color
        }

        25% {
            box-shadow: boxSize*-1px boxSize*1px color,
            boxSize*-1px boxSize*-1px color2,
            boxSize*1px boxSize*-1px color,
            boxSize*1px boxSize*1px color2
        }

        50% {
            box-shadow: boxSize*-1px boxSize*-1px color2,
            boxSize*1px boxSize*-1px color,
            boxSize*1px boxSize*1px color2,
            boxSize*-1px boxSize*1px color
        }

        75% {
            box-shadow: boxSize*1px boxSize*-1px color,
            boxSize*1px boxSize*1px color2,
            boxSize*-1px boxSize*1px color,
            boxSize*-1px boxSize*-1px color2
        }
      }

    .facebook-auth-form
      text-align center

      p
        margin-bottom 7px

      a
        display inline-block
        border-bottom-width 1px
        border-bottom-style solid
        border-bottom-color transparent
        font-weight normal
        font-size 12px
        line-height 1

        &:hover
          border-bottom-color #66adea
          text-decoration none

      .btn-facebook
        display inline-block
        position relative
        margin 20px 0 50px
        padding 8px 20px 8px 12px
        max-width 100%
        border none
        border-radius 4px
        font-weight 600
        color #fff
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        background #3b5998
        background unquote("linear-gradient(top, #3b5998, #314b80)")

        &:hover
          opacity .9
          color #f7f7f7

        &:active
          opacity 1
          color #f7f7f7
          box-shadow inset 0 0 8px rgba(#082665, .6)

        .facebook:before
          position relative
          top 4px
          margin-right 8px
          padding-right 7px
          border-right 1px solid rgba(#fff, .1)
          font-size 20px
          line-height 0
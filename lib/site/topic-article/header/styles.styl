border_radius = 2px

header
  h1
    margin-top 0

  .entry-tag
    font-weight bold
    font-size 11px
    text-transform uppercase
    text-align center
    position absolute
    left -140px
    width 100px
    top 44px

    img
      width 40px
      height 40px
      left 30px
      top 20px
      position absolute

    .hexagon
      width 80px
      height 80px

    @media screen and (max-width: 1100px)
      position: static
      width: auto
      padding-bottom: 10px
      margin-bottom: 20px
      text-align: left
      border-bottom: 4px solid rgba(#000, .8)

      svg.hexagon
        left: 0
        position: absolute
        display: none
      img
        z-index: 100
        left: 20px
        display: none

      span
        font-size: 14px
        margin-left: 0
        padding-top: 10px
        display: inline-block

  h2.author
    color #666
    font-size 16px
    font-weight normal
    margin 0

  .meta-information
    margin-bottom 10px
    color #666
    font-size 16px

    .icon-time
      margin-right 6px

    .meta-timeago,
    .meta-timeago-label
      display inline-block

    .label
      display inline-block
      margin-right 10px
      border-radius 0
